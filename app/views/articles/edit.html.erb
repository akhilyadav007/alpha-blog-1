<h1>Update Article</h1>

<% if @article.errors.any? %>
    <h2> Errors</h2>
        <% @article.errors.full_messages.each do |message| %>        
           <li> <%= message %> </li>
        <% end %>        
    </h2>   
<% end %>
<%= form_with(model: @article, local: true )  do |f| %>

    <p> 
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p>
    
    <p>
        <%=f.label :desciption %> <br/>
        <%=f.text_area :description %>
    </p>
    <p>
        <%=f.submit %>
    </p>
    


<% end %>   